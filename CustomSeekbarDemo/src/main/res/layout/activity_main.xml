<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8e8e8e"
    android:orientation="vertical"
    tools:context="com.tplink.seekbar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <com.tplink.seekbar.widgets.ThicknessSeekBar
            android:id="@+id/tsb"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:thumb="@drawable/thickness_ajust"
            app:ProgressColor="#f00"/>

        <com.tplink.seekbar.widgets.AlphaSeekBar
            android:id="@+id/asb"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1"
            android:thumb="@drawable/alpha_ajust"
            app:ProgressColor="#f00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="click1"
            android:padding="20dp"
            android:text="changeColor1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="click2"
            android:padding="20dp"
            android:text="changeColor2"/>
    </LinearLayout>
</LinearLayout>
